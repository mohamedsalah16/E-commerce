@model Demo.Bl.Models.DepartmentVM

@{
    ViewData["Title"] = "Create";
}


<div class="block-header">
    <h2>Create New Department</h2>
</div>

<from class="from-group" asp-controller="Department" asp-action="Create">


    <div asp-validation-summary="All" class="text-danger">

    </div>
    <label asp-for="Name">Department Name</label>
    <input type="text" class="from-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <br />
    
    <label asp-for="Code">Department Code</label>
    <input type="text" class="from-control" asp-for="Code"/>
    <span asp-validation-for="Code" class="text-danger" ></span>

    <br />
    <br />
    <center>
        <input type"Sumbit" value=" Save" class="btn btn-primary"/>

        <input type"Reset" value="Cancle" class="btn btn-danger" />

    </center>


</from>


@section MicrosoftValidation{
    <script src="~/plugins\jquery-validation\jquery.validate.js"></script>
    <script src="~/plugins\jquery-validation-unobtrusive\jquery.validate.unobtrusive.min.js"></script>
}